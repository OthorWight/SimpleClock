<Window x:Class="SimpleClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleClock"
        mc:Ignorable="d"
        Title="SimpleClock" Height="80" Width="170" ResizeMode="NoResize" Background="{DynamicResource {x:Static SystemColors.DesktopBrushKey}}" Foreground="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}">
    <Grid Margin="0,0,0,0">
        <Label x:Name="clockLabel" Content="23:59:59.9 AM" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="160" FontFamily="Consolas" FontSize="20" Margin="0,5,0,0" RenderTransformOrigin="0.781,0.562" Foreground="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>

    </Grid>
</Window>
